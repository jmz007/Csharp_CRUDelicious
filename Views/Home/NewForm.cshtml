@model Csharp_CRUDelicious.Models.Dish;
@{
    ViewData["Title"] = "Add a new Dish";
}

<div class="Container">
    <div class="card">
        <h2 class="card-header">Let's add a new dish!</h2>
    <div class="card-body">
    <form asp-action="AddDish" asp-controller="Home" method="POST">
        <div class="form-row">
            <div class="form-group col-4">
                <span asp-validation-for="Chef"></span>
                <label asp-for="Chef" class="control-label">Chef's Name</label>
                <input type="text" asp-for="Chef" class="form-control">
               
                <span asp-validation-for="Name"></span>
                <label asp-for="Name" class="control-label">Name of Dish</label>
                <input type="text" asp-for="Name" class="form-control">

                <span asp-validation-for="Calories"></span>
                <label asp-for="Calories" class="control-label">Calorie count </label>
                <input type="number"  asp-for="Calories" class="form-control">

            </div>
            <div class="form-group col-1">
            </div>
            <div class="form-group col-1" >
                <span asp-validation-for="Tastiness"></span>
                    <label asp-for="Tastiness" class="control-label">Tastiness</label>
                    <input type="number" min="0" max="5" asp-for="Tastiness" class="form-control">

                <br>
                    <!-- <select  asp-for="Tastiness">
                        
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                -->
            </div>
            <div class="form-group col-1">
            </div>
            <div class="form-group col-5">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description" class="control-label">Description</label>
                <textarea type="text" asp-for="Description" class="form-control"></textarea>
            </div>
        </div>
        <a href="/" class="btn btn-primary">Home</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
</div>