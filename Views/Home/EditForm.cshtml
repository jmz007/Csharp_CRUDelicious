@model Csharp_CRUDelicious.Models.Dish;
@{
    ViewData["Title"] = "Edit a Dish";
}

<div class="container">
    <div class="card">
        <h2 class="card-header">Edit @Model.Name</h2>
    <div class="card-body">
    <form asp-action="edit" asp-controller="Home" method="POST">
            <div class="form-row">
                <div class="form-group col-4">
                    <label asp-for="Chef" class="control-label"></label>
                    <input type="text" asp-for="Chef" class="form-control">

                    <label asp-for="Name" class="control-label"></label>
                    <input type="text" asp-for="Name" class="form-control">

                    <label asp-for="Calories" class="control-label"></label>
                    <input type="number"  asp-for="Calories" class="form-control">
                </div>
                <div class="form-group col-1">
                </div>
                <div class="form-group col-1">
                    <span asp-validation-for="Tastiness"></span>
                    <label asp-for="Tastiness" class="control-label"></label>
                    <input type="number" min="0" max="5" asp-for="Tastiness" class="form-control">
                </div>
                <div class="form-group col-1">
                </div>
                <div class="form-group col-5">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea type="text" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>   
                <button type="submit" class="btn btn-primary">Submit Edit</button>
                <a href="/" class="btn btn-primary">Home</a>
 
    </form>
    
</div>